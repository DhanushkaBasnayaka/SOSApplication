<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row"
       >



        <trimdevelopmentcom.sos.MyTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:id="@+id/topick"
            android:layout_below="@+id/linearLayout3"
            android:textColor="#fff"
            android:gravity="left"
            android:textStyle="bold"
            android:text="Always Wash your hands before and after treatment"/>

        <trimdevelopmentcom.sos.MyTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_margin="5dp"
            android:textColorLink="#f7b306"
android:maxLines="2"
            android:paddingLeft="10dp"
            android:id="@+id/infromation"
            android:layout_below="@+id/linearLayout3"
            android:textColor="#fff"
            android:gravity="left"
            android:textStyle="normal"
            android:text="Always Wash your hands before and after treatment"/>
        <trimdevelopmentcom.sos.MyTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_margin="5dp"

            android:paddingLeft="10dp"
            android:id="@+id/weblink"
            android:layout_below="@+id/linearLayout3"
            android:textColor="#fff"
            android:gravity="left"
            android:textStyle="normal"
            android:text="Always Wash your hands before and after treatment"/>
        <trimdevelopmentcom.sos.MyTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_margin="5dp"

            android:paddingLeft="10dp"
            android:id="@+id/date"
            android:layout_below="@+id/linearLayout3"
            android:textColor="#fff"
            android:gravity="left"
            android:textStyle="normal"
            android:text="Date : 2016/09/14"/>
    <trimdevelopmentcom.sos.MyTextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/date"
android:background="#ffffff"
        android:gravity="center"

        />
    <!--</TableRow>-->

</LinearLayout>
    <trimdevelopmentcom.sos.MyTextView
        android:id="@+id/New"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/badges"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:padding="10dp"
        android:text="New One"
        android:rotation="-30"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#fff"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>