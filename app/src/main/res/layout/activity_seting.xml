<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="trimdevelopmentcom.sos.SetingActivity">
    <android.support.v7.widget.Toolbar

        android:id="@+id/toolbar"
        android:background="@drawable/top_baner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"

        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
        <TextView
            android:textSize="20dp"
            android:id="@+id/action_br"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:layout_weight="1"


            android:textColor="#fff"
            android:gravity="center"
            />

        </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

    <LinearLayout
        android:layout_width="fill_parent"
        android:background="#fff"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar">

        <TextView
            android:textSize="20dp"
            android:padding="15dp"
android:gravity="left"
            android:drawableRight="@mipmap/arrow"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:text="YOUR PROFILE"
            android:background="#22484646"
            android:textColor="#90111111"

            />
        <RelativeLayout

            android:layout_width="fill_parent"
android:layout_margin="5dp"
            android:layout_height="wrap_content"

            >

        <TextView
            android:padding="10dp"
            android:id="@+id/elam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:text="Name"
            android:textSize="17dp"
            android:textColor="#111"
            android:gravity="center"

            />
        <EditText
            android:id="@+id/name"
            android:layout_marginRight="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:inputType="text"
            android:padding="10dp"
            android:background="#22484646"
            android:textSize="16dp"
            android:textColor="#111"
            android:gravity="center"
            android:hint="Enter Name"

            android:layout_toRightOf="@+id/elam"
            android:layout_toEndOf="@+id/elam" /></RelativeLayout>
        <TextView
            android:layout_width="fill_parent"
            android:background="#30111111"
            android:layout_height="2dp"/>
        <RelativeLayout

            android:layout_width="fill_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"

            >

            <TextView
                android:padding="10dp"
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:text="E-Mail"
                android:textSize="17dp"
                android:textColor="#111"
                android:gravity="center"

                />
            <EditText
                android:id="@+id/E_mail"
                android:layout_marginRight="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:background="#22484646"
                android:textSize="16dp"
                android:textColor="#111"
                android:gravity="center"
                android:hint="test@gmail.com"

                android:layout_toEndOf="@+id/email"
                android:layout_toRightOf="@+id/email" /></RelativeLayout>
        <TextView
            android:layout_width="fill_parent"
            android:background="#30111111"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:id="@+id/input_layout_phone"
            android:layout_width="fill_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"

            >

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:text="Phone"
                android:textSize="17dp"
                android:textColor="#111"
                android:gravity="center"

                android:id="@+id/textView10" />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:src="@drawable/flag_gb"
android:id="@+id/couflag"
                android:textColor="#111"
                android:gravity="center"

                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView10"
                android:layout_toEndOf="@+id/textView10" />


            <EditText

                android:id="@+id/Phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:inputType="phone"
                android:padding="10dp"
                android:maxEms="9"
                android:layout_marginRight="20dp"
                android:background="#22484646"
                android:textSize="16dp"
                android:textColor="#111"
                android:gravity="center"
                android:hint="720000000"

                android:layout_alignParentTop="true"

                android:layout_toRightOf="@+id/couflag" /></RelativeLayout>
        <TextView
            android:layout_width="fill_parent"
            android:background="#30111111"
            android:layout_height="2dp"/>
        <TextView
            android:textSize="20dp"
            android:padding="15dp"
            android:gravity="left"
            android:drawableRight="@mipmap/arrow"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:text="SOS SMS RECIPIENTS"
            android:background="#22484646"
            android:textColor="#90111111"

            />
        <RelativeLayout
            android:layout_marginRight="20dp"

            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"

            >

            <TextView

                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:text="Phone"
                android:textSize="17dp"

android:id="@+id/phon_s2"
                android:textColor="#111"
                android:gravity="center"

                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:src="@drawable/flag_gb"

                android:id="@+id/couflag_2"
                android:textColor="#111"
                android:gravity="center"

                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/phon_s2"
                android:layout_toEndOf="@+id/phon_s2" />

            <EditText

                android:id="@+id/sos_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:maxEms="9"
                android:inputType="phone"
                android:padding="10dp"
                android:background="#22484646"
                android:textSize="16dp"
                android:textColor="#111"
                android:gravity="center"
                android:hint="0700000000"

                android:layout_alignBottom="@+id/phon_s2"
                android:layout_toRightOf="@+id/couflag_2"
                android:layout_toLeftOf="@+id/add_contect"
                 />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_itam"
                android:padding="2dp"
                android:textColor="#111"
                android:gravity="right"
                android:id="@+id/add_contect"

                android:layout_alignBottom="@+id/sos_phone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:background="#30111111"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:id="@+id/input_layout_phone_2"
            android:layout_marginRight="20dp"

            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:visibility="gone"


            >

            <TextView
                android:padding="10dp"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:text="Phone"
                android:textSize="18dp"
                android:textColor="#111"
                android:gravity="center"

                android:id="@+id/textView11" />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:src="@drawable/flag_gb"
                android:id="@+id/couflag_add"
                android:textColor="#111"
                android:gravity="center"

                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11"
                android:layout_marginLeft="77dp"
                android:layout_marginStart="77dp" />


            <EditText

                android:id="@+id/sos_Phone2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:padding="10dp"
                android:background="#22484646"
                android:textSize="16dp"
                android:textColor="#111"
                android:inputType="phone"
                android:gravity="center"
                android:hint="0700000000"
                android:layout_toLeftOf="@+id/cancel"
                android:layout_toRightOf="@+id/couflag_add"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cancel"
                android:padding="2dp"
                android:textColor="#111"
                android:gravity="right"
                android:id="@+id/cancel"

                android:layout_alignBottom="@+id/textView11"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

        <TextView
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:id="@+id/add"
android:drawableLeft="@drawable/plus"
            android:text="   Add recipient"
            android:textSize="18dp"
            android:textColor="#111"
            android:gravity="left"

            />

        <TextView
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:text="Please specify one or more recipients , you can manuallyinsert a phone number or you can select a contact from yourcontacts list"
            android:textSize="18dp"
            android:textColor="#90111111"
            android:gravity="left"

            />
        <TextView
            android:textSize="20dp"
            android:padding="15dp"
            android:gravity="left"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SOS E-MAIL RECIPIENTS"
            android:background="#22484646"
            android:textColor="#90111111"

            />

        <RelativeLayout

            android:layout_width="fill_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"

            >

            <TextView
                android:padding="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:text="E-Mail"
                android:textSize="18dp"
                android:textColor="#111"
                android:gravity="center"

                android:id="@+id/textView12" />
            <EditText
                android:id="@+id/SOS_E_mail"
                android:layout_marginRight="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:background="#22484646"
                android:textSize="16dp"
                android:textColor="#111"
                android:gravity="center"
                android:hint="Enter EmailAddress"

                android:layout_toRightOf="@+id/textView12"
                android:layout_toEndOf="@+id/textView12" />
        </RelativeLayout>
        <RelativeLayout
android:id="@+id/input_emsil"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:padding="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:text="E-Mail"
                android:textSize="18dp"
                android:textColor="#111"
                android:gravity="center"

                android:id="@+id/textView9" />
            <EditText
                android:id="@+id/SOS_E_mail_sos2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"

                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:background="#22484646"
                android:textSize="16dp"
                android:textColor="#111"
                android:gravity="center"
                android:hint="Enter EmailAddress"

                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView9"
                android:layout_toLeftOf="@+id/cancel_email"
               />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cancel"
                android:padding="2dp"
                android:textColor="#111"
                android:gravity="right"
                android:id="@+id/cancel_email"

                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:background="#30111111"
            android:layout_height="2dp"/>
        <TextView
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
android:id="@+id/add_email"
            android:drawableLeft="@drawable/plus"
            android:text="   Add recipient"
            android:textSize="18dp"
            android:textColor="#111"
            android:gravity="left"

            />
        <TextView
            android:textSize="20dp"
            android:padding="15dp"
            android:gravity="left"
            android:drawableRight="@mipmap/arrow"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:text="CUSTOM SOS MASSAGE"
            android:background="#22484646"
            android:textColor="#90111111"

            />

        <EditText
            android:id="@+id/Sos_masseg"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:maxLines="2"
            android:paddingTop="10dp"
            android:background="#22484646"
            android:textSize="16dp"
            android:textColor="#111"
            android:gravity="center"
            android:hint="I am in emergency situation,need help .... "

            />

        <TextView
            android:textSize="20dp"
            android:padding="15dp"
            android:gravity="left"
            android:drawableRight="@mipmap/arrow"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:text="COUNTDOWN SOS MASSAGE"
            android:background="#22484646"
            android:textColor="#90111111"

            />

        <EditText

            android:id="@+id/Sos_countdown_masseg"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:maxLines="2"
            android:paddingTop="10dp"
            android:background="#22484646"
            android:textSize="16dp"
            android:textColor="#111"
            android:gravity="center"
            android:hint="I am in emergency situation,need help .... "

            />
        <TextView
            android:textSize="20dp"
            android:id="@+id/history"
            android:padding="15dp"
            android:gravity="left"
            android:drawableRight="@mipmap/arrow"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:text="SOS MASSAGE HISTORY"
            android:background="#22484646"
            android:textColor="#90111111"

            />

        <TextView
            android:textSize="20dp"
            android:layout_marginTop="5dp"

            android:padding="15dp"
            android:gravity="left"
            android:drawableRight="@mipmap/arrow"
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:text="SECURITY "
            android:background="#22484646"
            android:textColor="#90111111"

            />

        <RelativeLayout

            android:layout_width="fill_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"

            >

            <TextView
                android:padding="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:maxLines="2"
                android:text="Pin"
                android:textSize="18dp"
                android:textColor="#111"
                android:gravity="center"

                android:id="@+id/textView13" />
            <EditText
                android:id="@+id/pin"
                android:layout_marginRight="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="4"
                android:inputType="numberPassword"
                android:hint="****"
                android:padding="10dp"
                android:background="#22484646"
                android:textSize="16dp"
                android:textColor="#111"
                android:gravity="center"


                android:layout_toRightOf="@+id/textView13"
                android:layout_toEndOf="@+id/textView13" /></RelativeLayout>

        <Button
            android:textSize="20dp"
            android:id="@+id/Save"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="left"
            android:layout_margin="20dp"

            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:text="Save"
            android:layout_gravity="center"
            android:background="#e11b28"
            android:textColor="#fff"

            />



    </LinearLayout>
    </ScrollView>
</RelativeLayout>
