<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<fragment
    android:id="@+id/map2"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="trimdevelopmentcom.sos.Nerby_Activity" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avloadingIndicatorView"

        android:layout_width="70dp"
    android:layout_height="70dp"
    android:visibility="gone"
    app:indicator="BallSpinFadeLoader"
    app:indicator_color="#f90404"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp" />
    <TableRow
        android:gravity="center"
       android:layout_margin="10dp"
        android:id="@+id/input_layout_phone"
        android:layout_width="fill_parent"
        android:layout_above="@+id/roww2"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="right"
            android:id="@+id/plice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/police_newr"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:gravity="center"

            />
        <ImageView
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:id="@+id/hospitel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hospitel"

            android:textColor="#fff"
            android:gravity="center"

            />
        <ImageView
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:id="@+id/bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bank"

            android:textColor="#fff"
            android:gravity="center"

            />
    </TableRow>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">


        <!--<include-->
            <!--android:id="@+id/puterlbar"-->
            <!--layout="@layout/puter_laout" />-->

    </LinearLayout>
</RelativeLayout>