<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context="trimdevelopmentcom.sos.Count_down">
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">


        <include
            android:id="@+id/toolbar"
            layout="@layout/tollbar2" />


    </LinearLayout>
    <ScrollView
        android:layout_marginBottom="5dp"

        android:layout_below="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        >

    <LinearLayout
        android:layout_width="fill_parent"
        android:background="#fff"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="SOS"
        android:textColor="#111111"
        android:textStyle="bold"
        android:textSize="40dp"
        android:id="@+id/textView5"
        android:layout_marginTop="25dp"

        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COUNTDOWN"
        android:textColor="#111111"

        android:textSize="30dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TableRow
        android:id="@+id/input_layout_phone"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView6"
        android:paddingBottom="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/coun_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textStyle="bold"
            android:textSize="56dp"
            android:textColor="#111"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="56dp"
            android:textColor="#111"
            android:gravity="center"

            />
        <TextView
            android:textStyle="bold"
            android:id="@+id/coun_mint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="56dp"
            android:textColor="#111"
            android:maxLines="2"

            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="56dp"
            android:textColor="#111"
            android:gravity="center"

            />
        <TextView
            android:id="@+id/coun_ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="56dp"
            android:textColor="#f90404"
            android:maxLines="2"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            />
    </TableRow>

    <trimdevelopmentcom.sos.MyTextView

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="COUNTDOWN SOS MASSAGE"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#90111111"
        android:background="#20111111"
        android:maxLines="2"
        android:gravity="center"

        android:layout_below="@+id/input_layout_phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView7" />
    <EditText
android:layout_margin="15dp"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:id="@+id/Sos_countdown_masseg_new"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:maxLines="2"
        android:paddingTop="10dp"
        android:background="#22484646"
        android:textSize="16dp"
        android:textColor="#111"
        android:gravity="top"
        android:hint="I am in emergency situation,need help .... "

        android:layout_below="@+id/textView7"
       />


    <TableRow
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/Sos_countdown_masseg_new"
        android:paddingBottom="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <trimdevelopmentcom.sos.MyTextView
            android:layout_margin="5dp"
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:padding="15dp"
            android:background="#0a30ed"
            android:textSize="16dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="1"
            />

        <trimdevelopmentcom.sos.MyTextView
            android:layout_margin="5dp"
            android:id="@+id/active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTVE"
            android:padding="15dp"
            android:background="#ff0307"
            android:textSize="16dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="1"
            />

        <trimdevelopmentcom.sos.MyTextView
            android:layout_margin="5dp"
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="CANCEL"
            android:background="#06661b"
            android:textSize="16dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_weight="1"
            />
    </TableRow>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">


        <!--<include-->
            <!--android:id="@+id/puterlbar"-->
            <!--layout="@layout/puter_laout" />-->

    </LinearLayout>

</RelativeLayout>
