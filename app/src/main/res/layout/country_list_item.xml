<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/cou"

    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView 
        android:id="@+id/imgViewFlag"
        android:layout_height="30dp"
        android:layout_width="45dp"
        android:layout_margin="5dp"
        android:src="@drawable/flag_la"/>
    
    <trimdevelopmentcom.sos.MyTextView
        android:id="@+id/txtViewCountryName"
        android:textSize="13dp"
        android:text="Srilanka"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/imgViewFlag"
        android:layout_toRightOf="@+id/imgViewFlag"
        android:layout_toEndOf="@+id/imgViewFlag" />

</RelativeLayout>
